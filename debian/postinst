#! /bin/sh

set -e

case $1 in configure)
	data=/var/lib/fruitbak
	if ! getent passwd fruitbak >/dev/null 2>&1
	then
		adduser --system --quiet --disabled-login --group --home $data --no-create-home fruitbak
		if ! test -e $data
		then
			mkdir -m 750 $data
			mkdir $data/pool $data/host
			touch $data/lock
			chown -R fruitbak: $data
		fi
	fi
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
