#! /usr/bin/env python3

from sys import argv, exit
from fruitbak import Fruitbak
from fruitbak.cli import Cli
from pathlib import Path

#cli = Cli(cfg = cfg, argv = argv)
#exit(cli.run())

fbak = Fruitbak(confdir = Path('/dev/shm/conf'))

share = fbak.host('abby').backup(0).share('sys/log')
for dentry in share.ls('/'):
	print(dentry.name)

dentry = None
share = None

print("done")
exit(0)

for host in fbak.hosts:
	for backup in host.backups:
		for share in backup.shares:
			print(host.name + ': ' + str(backup.index) + ': ' + share.name)
			print(share.metadata)
			for dentry in share.ls('/'):
				print(dentry.name)
			break
		break
	break
